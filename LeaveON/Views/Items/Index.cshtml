<script src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.print.min.js"></script>

<script type="text/javascript">

  $(document).ready(function () {

    $('#example').DataTable({
      "paging": true,
      "lengthChange": true,
      "pageLength": 100,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": true,
      "responsive": true,
      "order": [[0, "desc"]],
      dom: 'Bfrtip',
      buttons: [
        'copy', 'csv', 'excel', 'pdf', 'print'
      ]
      
    });
  });
</script>
