@model List<LeaveON.Models.ApproverReview>
@{
  ViewBag.Title = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>


<!-- DataTables -->
<link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" rel="stylesheet" />


<div class="col-md-12 mt-2">
  <div class="card card-warning">
    <div class="card-header">
      <h3 class="card-title">Approver Review</h3>
    </div>
    <div class="card-body">
       <div class="row">
          <table id="approverTable" class="table table-striped table-hover">
            <thead style="background-color: #007bff; color: white;">
              <tr>
                <th scope="col">Batch No</th>
                <th scope="col">Form Title</th>
                @*<th scope="col">Modified By</th>*@
                <th scope="col">Modified Date</th>
                @*<th scope="col">No Of Records</th>
                <th scope="col">Review Status</th>*@
                <th scope="col">Reject</th>
                <th scope="col">Approve</th>
              </tr>
            </thead>
            <tbody>
                @{ 
                    for (int i = 0; i < Model.Count; i++)
                    {
                              <tr>
                                <td>@Model[i].BatchNo</td>
                                <td>@Model[i].FormTitle</td>
                                <td>@Model[i].ModifiedDate</td>
                                <td><span><i class="fa-solid fa-times" style="color:red;"></i></span></td>
                                <td><span><i class="fa-solid fa-check" style="color:green;"></i></span></td>


                              </tr>
                    }
                }
            </tbody>
          </table>


        </div>
 </div>

  </div>
</div>


<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

